{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Braincells",
  "version": "0.1.0",
  "identifier": "edu.kennesaw.research.braincells",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Braincells - Intelligent Spreadsheet Automation",
        "width": 1400,
        "height": 900,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Productivity",
    "shortDescription": "Intelligent Spreadsheet Automation with Local AI",
    "longDescription": "Braincells brings intelligent automation to the spreadsheet interface, fully locally. Transform your research workstation into an intelligent data processing hub - think of each cell in your spreadsheet as a 'brain cell' capable of understanding and transforming data.",
    "macOS": {
      "minimumSystemVersion": "11.0",
      "frameworks": [],
      "entitlements": null
    },
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEI0M0NGQ0M1RTE0Qzg0MzkKUldRNWhFemh4Znc4dE5sWWw0SlpiSDliREUvaHVIKzBUUGk2c3laYzNRQjFtU2dnZkpCR2Rkb28K",
      "endpoints": [
        "https://github.com/ngoldbla/braincells-reboot/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
